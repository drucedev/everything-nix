{
  "auto_update": false,
  "format_on_save": "on",
  "keymap": "JetBrains",
  "theme": "Catppuccin Mocha",
  "editor": {
    "font_family": "JetBrains Mono Nerd Font",
    "font_size": 16,
    "line_height": 1.5
  },
  "lsp": {
    "nixd": {
      "settings": {
        "nixpkgs": {
          "expr": "import (builtins.getFlake (builtins.toString ./.)).inputs.nixpkgs { }"
        },
        "formatting": {
          "command": ["nixfmt"]
        },
        "options": {
          "nix-darwin": {
            "expr": "(builtins.getFlake (builtins.toString ./.)).darwinConfigurations.Odin.options"
          },
          "home-manager": {
            "expr": "(builtins.getFlake (builtins.toString ./.)).darwinConfigurations.Odin.options.home-manager.users.type.getSubOptions []"
          }
        }
      }
    }
  },
  "languages": {
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixfmt"
        }
      },
      "language_servers": ["nixd", "!nil"]
    }
  },
  "telemetry": {
    "metrics": false,
    "crash_reports": false
  }
}
