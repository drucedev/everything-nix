{
    "update.mode": "none",
    
    "editor.fontSize": 16,
    "editor.fontFamily": "JetBrains Mono Nerd Font",
    
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",

    "nixpkgs": {
        "expr": "import <nixpkgs> { }"
    },

    "formatting": {
        "command": [ "nixfmt" ]
    },
    
    "git.enableSmartCommit": true
}